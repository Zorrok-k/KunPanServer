{
  "include": ["src/server/**/*"],
  "compilerOptions": {
    "target": "ES2020",
    "esModuleInterop": true,
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "importHelpers": true,
    "isolatedModules": true,
    "incremental": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    // 装饰器支持
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
